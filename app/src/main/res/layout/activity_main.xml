<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.washington.devinb5.lifecounter.MainActivity">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/p1Add" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p1Add"
        android:layout_toRightOf="@+id/p1Add"
        android:layout_toEndOf="@+id/p1Add"
        android:id="@+id/p1Add5" />

    <TextView
        android:text="Player 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/p1Add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/p1Life"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/p1Add5"
        android:layout_toStartOf="@+id/p1Add5" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1Sub"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/p1Life"
        android:layout_alignRight="@+id/p1Life"
        android:layout_alignEnd="@+id/p1Life" />

    <Button
        android:text="-5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p1Sub"
        android:layout_toRightOf="@+id/p1Sub"
        android:layout_toEndOf="@+id/p1Sub"
        android:id="@+id/p1Sub5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/p1Add5"
        android:layout_toEndOf="@+id/p1Add5"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="69dp"
        android:id="@+id/gameOver" />

    <TextView
        android:text="Player 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/p2Add"
        android:layout_alignStart="@+id/p2Add" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2Life"
        android:layout_alignBaseline="@+id/p1Life"
        android:layout_alignBottom="@+id/p1Life"
        android:layout_toLeftOf="@+id/p2Sub5"
        android:layout_toStartOf="@+id/p2Sub5" />

    <Button
        android:text="-5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2Sub5"
        android:layout_alignBaseline="@+id/p2Sub"
        android:layout_alignBottom="@+id/p2Sub"
        android:layout_toRightOf="@+id/p2Add"
        android:layout_toEndOf="@+id/p2Add" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:id="@+id/p2Add"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gameOver"
        android:layout_toEndOf="@+id/gameOver" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p2Add"
        android:layout_toRightOf="@+id/p2Add"
        android:layout_toEndOf="@+id/p2Add"
        android:id="@+id/p2Add5" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2Sub"
        android:layout_alignBaseline="@+id/p1Sub5"
        android:layout_alignBottom="@+id/p1Sub5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Player 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/p3"
        android:layout_below="@+id/p3Add"
        android:layout_alignRight="@+id/p1Sub5"
        android:layout_alignEnd="@+id/p1Sub5" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4Sub"
        android:layout_alignBaseline="@+id/p4Sub5"
        android:layout_alignBottom="@+id/p4Sub5"
        android:layout_alignLeft="@+id/p4Add"
        android:layout_alignStart="@+id/p4Add" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4Life"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/p4Sub"
        android:layout_toEndOf="@+id/p4Sub" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3Life"
        android:layout_below="@+id/p3"
        android:layout_toRightOf="@+id/p1Sub"
        android:layout_toEndOf="@+id/p1Sub" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4Add"
        android:layout_alignBaseline="@+id/p3Add5"
        android:layout_alignBottom="@+id/p3Add5"
        android:layout_alignRight="@+id/p2Sub"
        android:layout_alignEnd="@+id/p2Sub" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4Add5"
        android:layout_alignBaseline="@+id/p4Add"
        android:layout_alignBottom="@+id/p4Add"
        android:layout_alignLeft="@+id/p2Sub5"
        android:layout_alignStart="@+id/p2Sub5" />

    <Button
        android:text="-5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3Sub5"
        android:layout_alignTop="@+id/gameOver"
        android:layout_toLeftOf="@+id/gameOver"
        android:layout_toStartOf="@+id/gameOver" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3Sub"
        android:layout_alignBottom="@+id/p3Sub5"
        android:layout_toLeftOf="@+id/p3Life"
        android:layout_toStartOf="@+id/p3Life" />

    <TextView
        android:text="Player 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/p4Add"
        android:layout_alignRight="@+id/p2Sub5"
        android:layout_alignEnd="@+id/p2Sub5" />

    <Button
        android:text="-5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4Sub5"
        android:layout_alignBaseline="@+id/gameOver"
        android:layout_alignBottom="@+id/gameOver"
        android:layout_alignRight="@+id/p4Add5"
        android:layout_alignEnd="@+id/p4Add5" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3Add5"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/p4Sub"
        android:layout_toRightOf="@+id/p3Add"
        android:layout_toEndOf="@+id/p3Add" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3Add"
        android:layout_alignBaseline="@+id/p3Add5"
        android:layout_alignBottom="@+id/p3Add5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
